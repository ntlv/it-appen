<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drop_shadow"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:clickable="false">

    <ImageView
        android:id="@+id/member_face"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/board_member_image"
        android:src="@drawable/about"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <!--<TextView
            android:id="@+id/member_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="member_id"
            android:textColor="@android:color/black" /> -->

        <TextView
            android:id="@+id/member_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/member_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="person"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/member_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mail"
            android:textColor="@color/abs__holo_blue_light"/>

       <!-- <TextView
            android:id="@+id/member_image_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="imageUrl"
            android:textColor="@android:color/black" /> -->
    </LinearLayout>

</LinearLayout>